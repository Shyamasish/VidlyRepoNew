@model Vidly.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*instead of @Model  we will ahve to use @ViewData when we pass viwdata from controller*@
@*<h2>@Model.Name</h2>*@
@*<h2>@( ((Movie)ViewData["Movie"]).Name)</h2>*@ @*this code is ugly compared to previous line of code. Microsoft decided to improve taht and added viewbag*@

<h2>@Model.Movie.Name</h2>
@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before</text>
}
else
{
<ul>
    @foreach (var customer in Model.Customers)
    {
        <li>@customer.Name</li>
    }
</ul>
}